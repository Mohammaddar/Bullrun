<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation.xml"
    app:startDestination="@id/fragmentMainList">

    <fragment
        android:id="@+id/fragmentMainList"
        android:name="com.example.bullrun.ui.mainList.MainListFragment"
        android:label="fragment_main_list"
        tools:layout="@layout/fragment_main_list" >
        <action
            android:id="@+id/action_fragmentMainList_to_searchListFragment"
            app:destination="@id/searchListFragment"
            />
        <action
            android:id="@+id/action_fragmentMainList_to_coinInfoFragment"
            app:destination="@id/coinInfoFragment" />
    </fragment>
    <fragment
        android:id="@+id/searchListFragment"
        android:name="com.example.bullrun.ui.searchList.SearchListFragment"
        android:label="SearchListFragment" />
    <fragment
        android:id="@+id/coinInfoFragment"
        android:name="com.example.bullrun.ui.coinInfo.CoinInfoFragment"
        android:label="CoinInfoFragment" >
        <argument
            android:name="coin"
            app:argType="com.example.bullrun.data.database.model.Coin" />
        <action
            android:id="@+id/action_coinInfoFragment_to_transactionFragment"
            app:destination="@id/transactionFragment" />
    </fragment>
    <fragment
        android:id="@+id/transactionFragment"
        android:name="com.example.bullrun.ui.transaction.TransactionFragment"
        android:label="TransactionFragment" >
        <argument
            android:name="coin"
            app:argType="com.example.bullrun.data.database.model.Coin" />
    </fragment>
    <fragment
        android:id="@+id/portfolioFragment"
        android:name="com.example.bullrun.ui.portfolio.PortfolioFragment"
        android:label="PortfolioFragment" />
    <fragment
        android:id="@+id/walletFragment"
        android:name="com.example.bullrun.ui.WalletFragment"
        android:label="WalletFragment" />
</navigation>