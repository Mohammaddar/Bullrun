<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation.xml"
    app:startDestination="@id/portfolioFragment">

    <fragment
        android:id="@+id/fragmentMainList"
        android:name="com.example.bullrun.ui.fragments.mainList.MainListFragment"
        android:label="fragment_main_list"
        tools:layout="@layout/fragment_main_list" >
        <action
            android:id="@+id/action_fragmentMainList_to_searchListFragment"
            app:destination="@id/searchListFragment"
            />
        <action
            android:id="@+id/action_fragmentMainList_to_coinInfoFragment"
            app:destination="@id/coinInfoFragment" />
    </fragment>
    <fragment
        android:id="@+id/searchListFragment"
        android:name="com.example.bullrun.ui.fragments.searchList.SearchListFragment"
        android:label="SearchListFragment" />
    <fragment
        android:id="@+id/coinInfoFragment"
        android:name="com.example.bullrun.ui.fragments.coinInfo.CoinInfoFragment"
        android:label="CoinInfoFragment" >
        <argument
            android:name="coin"
            app:argType="com.example.bullrun.data.database.model.Coin" />
        <action
            android:id="@+id/action_coinInfoFragment_to_transactionFragment"
            app:destination="@id/transactionFragment" />
    </fragment>
    <fragment
        android:id="@+id/transactionFragment"
        android:name="com.example.bullrun.ui.fragments.transaction.TransactionFragment"
        android:label="TransactionFragment" >
        <argument
            android:name="coin"
            app:argType="com.example.bullrun.data.database.model.Coin" />
    </fragment>
    <fragment
        android:id="@+id/portfolioFragment"
        android:name="com.example.bullrun.ui.fragments.portfolio.PortfolioFragment"
        android:label="PortfolioFragment" >
        <action
            android:id="@+id/action_portfolioFragment_to_walletActivity"
            app:destination="@id/walletActivity" />
    </fragment>
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.bullrun.ui.fragments.home.HomeFragment"
        android:label="HomeFragment" />
    <activity
        android:id="@+id/walletActivity"
        android:name="com.example.bullrun.ui.activitywallet.WalletActivity"
        android:label="WalletActivity" >
        <argument
            android:name="walletName"
            app:argType="string" />
    </activity>
</navigation>