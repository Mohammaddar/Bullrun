<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.Bullrun" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/background_shade2</item>
        <item name="colorOnPrimary">@color/teal_700</item>
        <item name="android:navigationBarColor">@color/primary</item>
        <item name="android:windowBackground">@color/background</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:fontFamily">@font/bahn_bold</item>
        <item name="android:textStyle">bold</item>

        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <item name="android:textColor">@color/black_light</item>

        <!--Only for v>23-->
        <item name="android:windowLightStatusBar">true</item>
        <!--Only for v>23-->

    </style>

    <style name="AppBarLayoutThemeOverlay" parent="Theme.Bullrun">
        <item name="colorPrimary">@color/white</item>
    </style>

    <style name="CardView.Button.FullWidth" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="backgroundTint">@color/black_light</item>
        <item name="android:background">@color/black_light</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Button" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="backgroundTint">@color/black_light</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerFamily">rounded</item>
        <item name="cornerRadius">8dp</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="bottomNavBar" parent="Widget.MaterialComponents.CardView">
        <item name="android:backgroundTint">@color/primary</item>
        <item name="shapeAppearanceOverlay">@style/bottomNavBarShape</item>
    </style>

    <style name="bottomNavBarShape" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeTopRight">16dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>

    <style name="circleImageView" parent="">
        <item name="android:clickable">true</item>
        <item name="android:background">?selectableItemBackgroundBorderless</item>
        <item name="contentPadding">2dp</item>
        <item name="shapeAppearanceOverlay">@style/circleImageViewShape</item>
    </style>

    <style name="circleImageViewShape" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
        <item name="android:padding">8dp</item>
    </style>


    <style name="BottomSheetCardViewShapeCollapsed" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeTopLeft">24dp</item>
        <item name="cornerSizeTopRight">24dp</item>
    </style>

    <style name="totalBalanceCardView" parent="Widget.MaterialComponents.CardView">
        <item name="android:backgroundTint">@color/primary</item>
        <item name="shapeAppearance">@style/totalBalanceCardViewShape</item>
    </style>

    <style name="totalBalanceCardViewShape" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">16dp</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeTopRight">16dp</item>
    </style>

    <style name="walletItem" parent="Widget.MaterialComponents.CardView">
        <item name="android:backgroundTint">@color/silver_700</item>
        <item name="shapeAppearance">@style/walletItemShape</item>
    </style>

    <style name="walletItemShape" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">8dp</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeTopRight">8dp</item>
    </style>

    <style name="newWalletButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="backgroundTint">@color/primary</item>
        <item name="shapeAppearance">@style/newWalletButtonShape</item>
    </style>

    <style name="newWalletButtonShape" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerSizeBottomLeft">8dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeTopLeft">8dp</item>
        <item name="cornerSizeTopRight">0dp</item>
    </style>

    <style name="statisticsButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="backgroundTint">@color/red</item>
        <item name="shapeAppearance">@style/statisticsButtonShape</item>
    </style>

    <style name="statisticsButtonShape" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerSizeBottomLeft">8dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeTopLeft">8dp</item>
        <item name="cornerSizeTopRight">0dp</item>
    </style>

    <style name="timeFrameSelectionToggleButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="backgroundTint">@color/transparent</item>
        <item name="android:textColor">@color/time_frame_selection_text</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textAllCaps">false</item>
    </style>


</resources>