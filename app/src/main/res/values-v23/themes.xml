<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.Bullrun" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">#F5F5F5</item>
        <item name="colorOnPrimary">@color/teal_700</item>
        <item name="android:navigationBarColor">@color/primary</item>

        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <item name="android:textColor">@color/black_light</item>



        <!--Only for v>23-->
        <item name="android:windowLightStatusBar">true</item>
        <!--Only for v>23-->

    </style>

    <style name="CardView.Button.FullWidth" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="backgroundTint">@color/black_light</item>
        <item name="android:background">@color/black_light</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Button" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="backgroundTint">@color/black_light</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerFamily">rounded</item>
        <item name="cornerRadius">8dp</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="bottomNavBar" parent="Widget.MaterialComponents.CardView">
        <item name="android:backgroundTint">@color/primary</item>
        <item name="shapeAppearanceOverlay">@style/bottomNavBarShape</item>
    </style>

    <style name="bottomNavBarShape" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeTopRight">16dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>


</resources>