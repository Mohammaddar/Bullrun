<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:animateLayoutChanges="true">

    <data>

        <variable
            name="context"
            type="android.content.Context" />

        <variable
            name="holder"
            type="com.example.bullrun.ui.fragments.wallet.AssetVH" />
    </data>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:layout_marginEnd="6dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:cardBackgroundColor="@color/bg_orange"
        app:cardCornerRadius="16dp"
        app:cardElevation="0dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_asset"
            android:layout_width="match_parent"
            android:layout_height="256dp">

            <LinearLayout
                android:id="@+id/bottom_layout"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@color/bg_orange_dark"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/linear_layout" />

            <TextView
                android:id="@+id/txt_name_asset"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:fontFamily="@font/mont_semibold"
                android:gravity="top"
                android:text="@{holder.asset.coinName}"
                android:textColor="@color/black_light"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@id/linear_layout"
                app:layout_constraintStart_toEndOf="@id/linear_layout"
                app:layout_constraintTop_toTopOf="@id/linear_layout"
                tools:text="Bitcoin" />

            <LinearLayout
                android:id="@+id/linear_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginBottom="24dp"
                android:background="@drawable/shape_rounded_8"
                android:padding="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <ImageView
                    android:id="@+id/imageView3"
                    context="@{context}"
                    imageBitmap="@{holder.asset.imageBitmap}"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@mipmap/ic_launcher" />
            </LinearLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/linear_layout"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp">

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guideline41"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintGuide_percent="0.1"
                    app:layout_constraintStart_toStartOf="parent" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="4dp"
                    android:background="@drawable/shape_progress_bar_full"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <LinearLayout
                    android:id="@+id/progress_bar_volume"
                    android:layout_width="0dp"
                    android:layout_height="4dp"
                    android:background="@drawable/shape_progress_bar_unfull"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="@id/guideline41"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/txt_volnvalue_asset"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text='@{String.valueOf(holder.asset.netHoldingVolume)+" "+holder.asset.symbol.toUpperCase()}'
                android:textColor="@color/black_100"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="@id/txt_price_asset"
                app:layout_constraintTop_toBottomOf="@id/txt_price_asset"
                tools:text="0.161423 BTC" />

            <TextView
                android:id="@+id/txt_price_asset"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="24dp"
                android:text='@{"$ "+String.valueOf(holder.asset.currentPrice)}'
                android:textColor="@color/black_100"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="$ 47860.54" />

            <TextView
                android:id="@+id/txt_pnlpercent_asset"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text='@{String.valueOf(holder.asset.pnlPercentage)+" %"}'
                android:textColor="@color/green"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="@id/txt_price_asset"
                app:layout_constraintTop_toBottomOf="@id/txt_volnvalue_asset"
                tools:text="+5.24%" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/btn_open_search_page"
                style="@style/circleImageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="4dp"
                android:src="@drawable/more"
                android:tint="@color/gray_500"
                android:visibility="invisible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/chart"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="24dp"
                android:paddingLeft="0dp"
                android:paddingRight="0dp"
                app:layout_constraintBottom_toTopOf="@id/linear_layout"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txt_pnlpercent_asset" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
</layout>