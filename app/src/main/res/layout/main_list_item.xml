<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="context"
            type="android.content.Context" />

        <variable
            name="coin"
            type="com.example.bullrun.data.database.model.Coin" />

        <variable
            name="holder"
            type="com.example.bullrun.ui.fragments.mainList.MainListVH" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="76dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:onClick="@{() -> holder.onClickListener(coin)}"
        android:clickable="true"
        android:background="?selectableItemBackground">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.5" />

        <TextView
            android:id="@+id/txt_rank"
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:layout_marginStart="28dp"
            android:background="@drawable/shape_txt_rank2"
            android:gravity="top|center_horizontal"
            android:textColor="@color/gray_500"
            android:textSize="12sp"
            android:textStyle="normal"
            android:text='@{String.valueOf(coin.marketCapRank)}'
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="3" />

        <ImageView
            android:id="@+id/img_logo"
            context="@{context}"
            imageUrl="@{coin.image}"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginStart="14dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/txt_rank"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/ic_launcher_background" />

        <TextView
            android:id="@+id/txt_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:singleLine="true"
            android:text="@{coin.coinName}"
            android:textColor="@color/black_100"
            android:textSize="14sp"
            app:layout_constraintBottom_toTopOf="@id/guideline_center_vertical"
            app:layout_constraintEnd_toStartOf="@id/txt_24hchange"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toEndOf="@id/img_logo"
            tools:text="Celer Network" />

        <TextView
            android:id="@+id/txt_symbol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="@{coin.coinSymbol}"
            android:textColor="@color/gray_700"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@id/img_logo"
            app:layout_constraintTop_toBottomOf="@id/guideline_center_vertical"
            tools:text="CELR" />

        <TextView
            android:id="@+id/txt_24hchange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="30dp"
            android:text='@{String.format("%.2f",coin.priceChangePercentage24h)+"%"}'
            android:textColor="@color/black_100"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@id/txt_name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/txt_name"
            tools:text="+24.86%" />

        <TextView
            android:id="@+id/txt_current_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="30dp"
            android:gravity="center_vertical|end"
            android:singleLine="true"
            android:text='@{String.valueOf(coin.currentPrice)+" $"}'
            android:textColor="@color/gray_700"
            android:textSize="13sp"
            app:layout_constraintBottom_toBottomOf="@id/txt_symbol"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1"
            app:layout_constraintStart_toEndOf="@id/txt_symbol"
            app:layout_constraintTop_toTopOf="@id/txt_symbol"
            tools:text="0.8842 $" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>