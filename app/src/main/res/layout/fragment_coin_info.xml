<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="coinInfo"
            type="drewcarlson.coingecko.models.coins.CoinFullData" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/txt_symbol_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:text="@{coinInfo.id}"
            app:layout_constraintBottom_toBottomOf="@+id/imageView"
            app:layout_constraintStart_toEndOf="@+id/imageView"
            app:layout_constraintTop_toTopOf="@+id/imageView"
            tools:text="BTC" />

        <TextView
            android:id="@+id/txt_name_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="64dp"
            android:text="@{coinInfo.name}"
            app:layout_constraintBottom_toBottomOf="@+id/txt_symbol_info"
            app:layout_constraintStart_toEndOf="@+id/txt_symbol_info"
            app:layout_constraintTop_toTopOf="@+id/txt_symbol_info"
            tools:text="Bitcoin" />

        <TextView
            android:id="@+id/txt_price_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text='@{String.valueOf(coinInfo.marketData.currentPrice.get("usd"))}'
            app:layout_constraintStart_toStartOf="@+id/txt_symbol_info"
            app:layout_constraintTop_toBottomOf="@+id/txt_symbol_info"
            tools:text="54089.54$" />

        <ImageView
            android:id="@+id/imageView"
            context="@{context}"
            imageUrl="@{coinInfo.image.large}"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="32dp"
            android:contentDescription="@string/coin_logo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@tools:sample/avatars" />

        <Button
            android:id="@+id/btn_add_transaction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="@string/add_transaction"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/imageView"
            app:layout_constraintTop_toBottomOf="@+id/txt_price_info"
            app:layout_constraintVertical_bias="0.0"
            android:textColor="@color/black"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>