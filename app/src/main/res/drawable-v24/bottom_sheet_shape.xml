<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">



    <item
        android:width="1000dp"
        android:height="1000dp"
        android:left="0dp">
        <shape>
            <gradient android:startColor="@color/transparent"
                android:endColor="#5C5C5C"
                android:centerY="0.2"
                android:centerColor="#9F9F9F"
                android:type="linear"
                />
            <corners android:topLeftRadius="36dp"/>
        </shape>
    </item>

    <item
        android:width="1000dp"
        android:height="1000dp"
        android:top="8dp"
        android:left="0dp">
        <shape>
            <solid android:color="@color/white"/>
            <corners android:topLeftRadius="36dp"/>
        </shape>
    </item>



</layer-list>